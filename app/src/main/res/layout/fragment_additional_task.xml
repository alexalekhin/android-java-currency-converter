<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AdditionalTaskFragment1">

    <TextView
        android:id="@+id/add_task_convert_to_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_task_convert_to_spinner" />

    <Spinner
        android:id="@+id/add_task_convert_to_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/myAwesomeColor1"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_task_convert_to_text" />

    <TextView
        android:id="@+id/add_task_convert_to_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/convert_to"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_task_convert_from_field" />

    <TextView
        android:id="@+id/add_task_convert_from_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/convert_from"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_task_convert_from_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/myAwesomeColor1"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/example_12_8"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_task_convert_from_spinner" />

    <Spinner
        android:id="@+id/add_task_convert_from_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/myAwesomeColor1"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_task_convert_from_text" />

    <ProgressBar
        android:id="@+id/add_task_progress_bar_from"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/myAwesomeColor1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/add_task_convert_from_field"
        app:layout_constraintEnd_toEndOf="@+id/add_task_convert_from_field"
        app:layout_constraintStart_toStartOf="@+id/add_task_convert_from_field"
        app:layout_constraintTop_toTopOf="@+id/add_task_convert_from_field" />

    <ProgressBar
        android:id="@+id/add_task_progress_bar_to"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/myAwesomeColor1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/add_task_convert_to_field"
        app:layout_constraintEnd_toEndOf="@+id/add_task_convert_to_field"
        app:layout_constraintStart_toStartOf="@+id/add_task_convert_to_field"
        app:layout_constraintTop_toTopOf="@+id/add_task_convert_to_field" />


    <!--app:layout_constraintEnd_toEndOf="@+id/add_task_convert_button"-->
    <!--app:layout_constraintStart_toStartOf="@+id/add_task_convert_button"-->
    <!--app:layout_constraintTop_toTopOf="@+id/add_task_convert_button" />-->

</android.support.constraint.ConstraintLayout>

